<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script>
	let cnt=0
	function clickBtn(){
		return cnt++
	}
	
	window.onload=function(){
		let cntTag =document.createElement('span')
		let cntText = document.createTextNode(cnt)
		cntTag.appendChild(cntText)
		document.body.appendChild(cntTag)
		
		let h1Tag = document.createElement("h1")
		let text = document.createTextNode('번 클릭')
		h1Tag.appendChild(text)
		document.body.appendChild(h1Tag)
		
		console.log(h1Tag)
		
		
	}

</script>
</head>
<body>
	
	<input type="button" value="클릭" onclick="clickBtn()">
</body>
</html>