<script>
//상속
	function Person(name, phone, addr) {
		this.name = name
		this.phone = phone
		this.addr = addr
	}

	Person.prototype.hobby = '영화감상'
	Person.prototype.info = function() {
		let msg = ''
		for ( let key in this) {//내객체안의 모든 키를 보고 추출
			//if (key != 'info')
				if(typeof(this[key]) != 'function')  // 맴버변수만 추출
				msg += key + ':' + this[key] + '\n'
		}

		alert(msg)
	}
	
	function Doctor(name, phone, addr, major){  ////상속 관계 형태를 나타내는 곳.
		//this.super =Person
		//this.super(name,phone,addr)
//		Person.call(this, name,phone, addr)
		//Person.call(this, ...arguments)
		
		Person.apply(this,arguments)
		
		
		this.major=major
	}
	
//	Doctor.prototype = Person.prototype // 닥터의 프로토를 펄슨의 프로토로 바꿔줌.
	Doctor.prototype =Object.create(Person.prototype)
//	Doctor.prototype =new Person()


	/*let p = new Person("홍길동", '010-2200-4444', '경기도')
	p.info()
	console.log(p)*/
	
	let d= new Doctor('나최고','010-2222-3333','서울시 서초구','신경외과')
	d.info()
	
	console.log(d)
	console.log(d instanceof Person) // 일부분이야?
	console.log( d instanceof Doctor) // true  --> 같은 내용을 가지고 있다고 해서 상속관계인것은 아님.
			
	
</script>


