		 */

		let html = $("p").html() //하나만 처리
		let text = $('p').text() //두개다 나옴. 차이가 있음.
		alert('추출된 HTML: ' + html)
		alert('추출된 Text: ' + text)

		$('button').click(function() {
//			let inputTag = document.getElementById("name")
