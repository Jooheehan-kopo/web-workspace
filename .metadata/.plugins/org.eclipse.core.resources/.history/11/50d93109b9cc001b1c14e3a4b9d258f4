<script>
	//함수를 리턴

	function returnFunction() {
		return function() {
			alert('return Function...')
		}
	}
	
	//	let ret = returnFunction()
	//	ret()
	returnFunction()()

	function test(name) {
		let output = 'Hello' + name + '!!!'
		return function(){
			alert(output) // 이 함수의 내용이 끝날때까지 변수값을 유지 시켜줌.
		}
	}

	test('홍길동')
</script>

