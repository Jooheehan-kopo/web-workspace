<title>Insert title here</title>
<script>
	window.onload = function() { //바디 안의 값을 가져오기위해  -> doc 객체에 있음.,.
	//		let id = document.getElementById('id')    //어떤 요소를 찾고 싶다.id에 의해서 --> 유니크한 값. 온리원 

		let id = document.querySelector('#id')
		//		console.log(id.innerHTML)  // id 만 뽑아줌. 
		id.innerHTML = '아이디' //id 의 ID를 한글 아이디로 바꿔줌. (화면에 바로)
		
		let password = document.querySelector('.pwd')
		password.innerHTML ='패스워드'
	}
</script>
