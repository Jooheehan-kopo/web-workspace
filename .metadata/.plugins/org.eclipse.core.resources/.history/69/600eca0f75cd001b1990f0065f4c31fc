<script>


//class  - 생성자 함수를 클래스 안에 con 으로 대체. function 키워드 안씀

class Person{
	constructor(name, phone, addr){
		this.name=name
		this.phone =phone
		this.addr=addr
	}
	info(){
		alert(`name:${this.name}\n phone:${this.phone}\naddr:${this.addr}`)
	}
}


let p = new Person('홍길동',	'010-1111-2222', '광명시')
		
console.log(p)

</script>
