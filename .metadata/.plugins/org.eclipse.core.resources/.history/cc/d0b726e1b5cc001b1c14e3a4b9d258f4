	function func(num1,num2,num3){
		alert(`num1: ${num1}, num2: ${num2}, num3: ${num3}`)
	}
	function func(num1,num2,num3){
		
		if(!num1) num1=0
		if(!num2) num2=0
		if(!num3) num3=0 //true : num3에 값이 안들어온것임.
		alert(`num1: ${num1}, num2: ${num2}, num3: ${num3}`)
	}
	
	
	
	
	func() // undefined 라고 나오니까, 
	func(100,200)
