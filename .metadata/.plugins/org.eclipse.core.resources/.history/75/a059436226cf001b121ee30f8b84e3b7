<script src="js/jquery-3.6.0.min.js"></script>
<script>
	

	let starFunc =function(){
		$('h1')[0].innerText += "*"
	}
	
	
	//3.클릭햇다고 인식하여 하나씩 증가 
	$(document).ready(function() {
		$('h1').click(function(){
			$(this)[0].innerText +="*"
		})
		
	setInterval(function(){
	//		$('h1').click()  //클릭한 효과. 벗 좋지 않음. --> trigger 써야함.
		$('h1').trigger('click') // 한 것과 같은 효과.
		},1000)
	
	//2.클릭하면 별
	$(document).ready(function() {
		$('h1').click(function(){
			$(this)[0].innerText +="*"
		})
		
		
	//1.1초마다 별 : interval	
	/*	setInterval(function(){
			starFunc()
		},1000)
		
	})*/
</script>

