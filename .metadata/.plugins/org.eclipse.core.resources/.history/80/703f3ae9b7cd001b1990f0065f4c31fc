<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<script>
	let cnt=''
	function clickBtn(){
		this.cnt++
		return cnt
	}
	
	window.onload=function(){
		let h1Tag = document.createElement("h1")
		let text = document.createTextNode(cnt+'번 클릭')
		h1Tag.appendChild(text)
		document.body.appendChild(h1Tag)
		
		h1Tag.onclick=function(){
			alert(cnt)
		}
		
	}

</script>
</head>
<body>
	
	<input type="button" value="클릭" onclick="clickBtn()">
</body>
</html>